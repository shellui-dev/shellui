@namespace ShellUI.Components

<div class="@Shell.Cn("shrink-0 bg-border", Orientation == "vertical" ? "h-full w-[1px]" : "h-[1px] w-full", Class)" @attributes="AdditionalAttributes"></div>

@code {
    [Parameter] public string Orientation { get; set; } = "horizontal";
    [Parameter] public string? Class { get; set; }
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }
}
