@namespace BlazorInteractiveServer.Components.Demo
@using BlazorInteractiveServer.Components

<section class="border border-border rounded-lg p-6 bg-card">
    <h2 class="text-2xl font-semibold mb-4 text-card-foreground">Navigation</h2>
    <div class="space-y-6">
        <!-- Navbar Demo -->
        <div>
            <h3 class="text-xl font-semibold mb-2 text-card-foreground">Navbar</h3>
            <div class="relative border border-border rounded-lg overflow-hidden h-64 bg-background">
                <Navbar>
                    <div class="flex items-center space-x-4 w-full">
                        <div class="flex items-center gap-2">
                            <ShellUILogo Size="24" />
                            <span class="font-bold text-lg">ShellUI</span>
                        </div>
                        <nav class="flex items-center space-x-6 text-sm font-medium flex-1">
                            <a href="#" class="transition-colors hover:text-foreground/80 text-foreground">Home</a>
                            <a href="#" class="transition-colors hover:text-foreground/80 text-muted-foreground">Docs</a>
                            <a href="#" class="transition-colors hover:text-foreground/80 text-muted-foreground">Components</a>
                        </nav>
                        <Button Variant="@ButtonVariant.Outline" Size="@ButtonSize.Sm">Sign In</Button>
                    </div>
                </Navbar>
                <div class="p-6 text-sm text-muted-foreground">
                    <p>This navbar sticks to the top with backdrop blur effect!</p>
                </div>
            </div>
        </div>

        <!-- Sidebar Demo -->
        <div>
            <h3 class="text-xl font-semibold mb-2 text-card-foreground">Sidebar</h3>
            <div class="space-y-4">
                <Button OnClick="ToggleSidebar">
                    @(IsSidebarOpen ? "Close" : "Open") Sidebar
                </Button>
                <div class="relative border border-border rounded-lg overflow-hidden h-96 bg-background">
                    <Sidebar IsOpen="@IsSidebarOpen">
                        <div class="space-y-4">
                            <h4 class="font-semibold text-lg">Navigation</h4>
                            <nav class="space-y-2">
                                <a href="#" class="flex items-center space-x-2 px-3 py-2 rounded-md hover:bg-accent hover:text-accent-foreground transition-colors">
                                    <span class="material-symbols-outlined text-sm">home</span>
                                    <span>Dashboard</span>
                                </a>
                                <a href="#" class="flex items-center space-x-2 px-3 py-2 rounded-md hover:bg-accent hover:text-accent-foreground transition-colors">
                                    <span class="material-symbols-outlined text-sm">folder</span>
                                    <span>Projects</span>
                                </a>
                                <a href="#" class="flex items-center space-x-2 px-3 py-2 rounded-md hover:bg-accent hover:text-accent-foreground transition-colors">
                                    <span class="material-symbols-outlined text-sm">settings</span>
                                    <span>Settings</span>
                                </a>
                            </nav>
                        </div>
                    </Sidebar>
                    <div class="@(IsSidebarOpen ? "ml-64" : "") transition-all p-6">
                        <h4 class="font-semibold mb-2 text-foreground">Main Content Area</h4>
                        <p class="text-sm text-muted-foreground">
                            Toggle the sidebar to see the smooth slide-in animation!
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Breadcrumb Demo -->
        <div>
            <h3 class="text-xl font-semibold mb-2 text-card-foreground">Breadcrumb</h3>
            <Breadcrumb>
                <BreadcrumbItem Href="#">Home</BreadcrumbItem>
                <BreadcrumbItem Href="#">Components</BreadcrumbItem>
                <BreadcrumbItem Href="#">UI</BreadcrumbItem>
                <BreadcrumbItem IsLast="true">Breadcrumb</BreadcrumbItem>
            </Breadcrumb>
        </div>

        <!-- Accordion (Single: one open at a time, shadcn default) -->
        <div>
            <h3 class="text-xl font-semibold mb-2 text-card-foreground">Accordion (Single)</h3>
            <p class="text-sm text-muted-foreground mb-2">Only one section open at a time. Expanding one closes others.</p>
            <Accordion Type="@AccordionType.Single" Collapsible="true" DefaultValue="item-0">
                <AccordionItem Title="Is it accessible?">
                    <p class="text-sm text-muted-foreground">Yes. It adheres to the <a href="https://www.w3.org/WAI/ARIA/apg/" target="_blank" class="underline hover:text-foreground">WAI-ARIA design pattern</a>.</p>
                </AccordionItem>
                <AccordionItem Title="Is it styled?">
                    <p class="text-sm text-muted-foreground">Yes. It comes with default styles that matches the other components aesthetic.</p>
                </AccordionItem>
                <AccordionItem Title="Is it animated?">
                    <p class="text-sm text-muted-foreground">Yes. It's animated by default using Tailwind CSS transitions.</p>
                </AccordionItem>
            </Accordion>
        </div>

        <!-- Accordion (Compositional: AccordionTrigger + AccordionContent) -->
        <div>
            <h3 class="text-xl font-semibold mb-2 text-card-foreground">Accordion (Compositional)</h3>
            <Accordion DefaultValue="faq-1">
                <AccordionItem Value="faq-1">
                    <AccordionTrigger>Custom trigger content</AccordionTrigger>
                    <AccordionContent>
                        <p class="text-sm text-muted-foreground">Uses AccordionTrigger and AccordionContent for full control over markup.</p>
                    </AccordionContent>
                </AccordionItem>
                <AccordionItem Value="faq-2">
                    <AccordionTrigger><span class="font-bold">Bold header</span></AccordionTrigger>
                    <AccordionContent>
                        <p class="text-sm text-muted-foreground">Trigger and content can contain any markup.</p>
                    </AccordionContent>
                </AccordionItem>
            </Accordion>
        </div>

        <!-- Accordion (Multiple: allow multiple open) -->
        <div>
            <h3 class="text-xl font-semibold mb-2 text-card-foreground">Accordion (Multiple)</h3>
            <p class="text-sm text-muted-foreground mb-2">Set Type="Multiple" to allow multiple sections open at once.</p>
            <Accordion Type="@AccordionType.Multiple" DefaultValue="item-0,item-1">
                <AccordionItem Title="Notification Settings">
                    <p class="text-sm text-muted-foreground">Manage how you receive notifications.</p>
                </AccordionItem>
                <AccordionItem Title="Privacy &amp; Security">
                    <p class="text-sm text-muted-foreground">Control your privacy and security preferences.</p>
                </AccordionItem>
                <AccordionItem Title="Billing" Disabled="true">
                    <p class="text-sm text-muted-foreground">Disabled item example.</p>
                </AccordionItem>
            </Accordion>
        </div>
    </div>
</section>

@code {
    [Parameter] public bool IsSidebarOpen { get; set; } = false;
    [Parameter] public EventCallback<bool> IsSidebarOpenChanged { get; set; }

    private async Task ToggleSidebar()
    {
        IsSidebarOpen = !IsSidebarOpen;
        await IsSidebarOpenChanged.InvokeAsync(IsSidebarOpen);
    }
}
